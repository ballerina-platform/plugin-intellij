body {
    background: #f1f1f1;
}
.overlay {
    display: none;
}
.drop-zone.rect {
    fill-opacity: 0;
}
#diagram {
    height : 100%;
}
#errors {
    display: table;
    width: 100%;
    height: 100%;
}
#errors span {
    display: table-cell;
    vertical-align: middle;
    text-align: center;
}
#warning {
    position: absolute;
    top: 15px;
    position: absolute;
    overflow: hidden;
    height: 25px;
    vertical-align: bottom;
    text-align: center;
    color: rgb(255, 90, 30);
    width: 100%;
}
#warning p {
    line-height: 25px;
}
